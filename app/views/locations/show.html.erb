<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @location.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_1) %>:</strong></dt>
  <dd><%= @location.address_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_2) %>:</strong></dt>
  <dd><%= @location.address_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code_name) %>:</strong></dt>
  <dd><%= @location.postal_code_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postal_code_suffix) %>:</strong></dt>
  <dd><%= @location.postal_code_suffix %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @location.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @location.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @location.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @location.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:radius) %>:</strong></dt>
  <dd><%= @location.radius %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
