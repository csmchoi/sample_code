<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:address_1) %></th>
    <th><%= model_class.human_attribute_name(:address_2) %></th>
    <th><%= model_class.human_attribute_name(:postal_code_name) %></th>
    <th><%= model_class.human_attribute_name(:postal_code_suffix) %></th>
    <th><%= model_class.human_attribute_name(:phone_number) %></th>
    <th><%= model_class.human_attribute_name(:country) %></th>
    <th><%= model_class.human_attribute_name(:latitude) %></th>
    <th><%= model_class.human_attribute_name(:longitude) %></th>
    <th><%= model_class.human_attribute_name(:radius) %></th>
    <th><%= model_class.human_attribute_name(:distance) %></th>
    <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th>-->
  </tr>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.id, location_path(location) %></td>
        <td><%= location.name %></td>
        <td><%= location.address_1 %></td>
        <td><%= location.address_2 %></td>
        <td><%= location.postal_code_name %></td>
        <td><%= location.postal_code_suffix %></td>
        <td><%= location.phone_number %></td>
        <td><%= location.country %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.radius %></td>
        <td><%= location.distance.round(2) %> miles</td>
        <!--       <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_location_path(location), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      location_path(location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>-->
      </tr>
  <% end %>
  </tbody>
</table>

<%= form_tag import_locations_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import", :class => 'btn btn-danger' %>
<% end %>


<%= will_paginate @location, :renderer => WillPaginate::ActionView::LinkRenderer%>

